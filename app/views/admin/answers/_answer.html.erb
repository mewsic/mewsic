<tr id="row_<%= answer.id %>">
	<td><%= edit_link_to answer.id, admin_answer_path(answer.id) %></td>
	<td><%= truncate(answer.body, 30) %></td>
	<td><%= edit_link_to answer.user.login, admin_user_path(answer.user) if answer.user %></td>
	<td><%= answer.replies_count %></td>
	<td><%= answer.created_at.strftime "%d/%m/%Y %H:%M:%S" %></td>
</tr>
