<div class="gallery-photo-thumb" id="gallery-photo-thumb-<%= photo.id %>">
  <div style="position: relative;">
    <a href="<%= photo.public_filename(:large) %>" rel="user[<%= @user.login %>]" class="lightwindow image">
      <%= image_tag(photo.public_filename(:small), :alt => photo.filename) %>
    <span class="button view" style="display:none"></span></a>    
    <% if current_user_page? %>
      <%= link_to_remote '', :url => user_photo_path(@user, photo), :method => 'delete', :html => { :class => 'button delete', :style => 'display:none'  }, :confirm => 'Are you sure you want to delete this image?' %>
    <% end %>
  </div>
</div>
