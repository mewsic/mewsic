<div class="gallery-photo-thumb" id="gallery-photo-thumb-<%= photo.id %>">
  <div style="position: relative;">
		<a href="<%= photo.public_filename(:large) %>" rel="gallery[<%= @user.nickname %>]" title=" :: :: " class="lightview image">
      <%= image_tag(photo.public_filename(:small), :alt => photo.filename) %>
    <span class="button view" style="display:none"></span></a>    
    <% if current_user_page? %>
      <%= link_to_remote '', :url => user_photo_path(@user, photo), :method => 'delete', :html => { :class => 'button delete', :style => 'display:none'  }, :confirm => 'Do you want to delete this image?' %>
    <% end %>
  </div>
</div>
