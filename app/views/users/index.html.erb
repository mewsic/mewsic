<% title "Myousica - People" %>
<% meta_description "Myousica is the first open music community. Play with thousands of bands & deejays, create a virtual band, record, mix and share your favourite songs" %>
<% javascript('simple-slider', 'refresh-block', 'users') %>
	<div class="box-list one-col clear-block">
	  <div id="coolest-users">
	  	<%= render :partial => 'coolest' %>
	  </div>
	</div>
  
  <div class="box-list two-col clear-block">
    <div id="best-users">
    	<%= render :partial => 'best' %>
    </div>
  </div>
  
  <div class="box-list one-col clear-block clear-float">
    <div id="prolific-users" style="padding-bottom: 20px">
    	<%= render :partial => 'prolific' %>
    </div>
  	<div id="newest-users">
  		<%= render :partial => 'newest' %>
  	</div>
  </div>

  <div class="box-list two-col clear-block user-list-boxes">
	  <div class="box-rounded-gray clear-block" id="most-friends">
			<%= refresh_block_image_link :class => 'user', :type => 'friend' %>
		  <h1>MOST FRIENDS</h1>
			<div class="top-box clear-block refresh-container">
        <%= render :partial => 'most_friends', :collection => @friendliest %>
			</div>
		</div>
	
  	<div class="box-rounded-gray clear-block" id="most-instruments">
			<%= refresh_block_image_link :class => 'user', :type => 'instrument' %>
  		<h1>MOST INSTRUMENTS</h1>
  		<div class="top-box clear-block refresh-container">
        <%= render :partial => 'most_instruments', :collection => @most_instruments %>
  		</div>
  	</div>
	
	  <div class="box-rounded-gray clear-block" id="coolest-mbands">
			<%= refresh_block_image_link :class => 'mband', :type => 'cool' %>
		  <h1>COOLEST M-BANDS</h1>
		  <div class="top-box clear-block refresh-container">
        <%= render :partial => 'mbands/coolest', :collection => @coolest_mbands %>
		  </div>
	  </div>
  </div>
