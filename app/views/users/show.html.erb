  					<form>
  						<textarea id="status" name="status" class="status_input fleft">What's on your mind?</textarea>
  						<input type="submit" class="status_submit fleft" value="Share">
  					</form>
  				-->
  				</div>
  				<div class="clear"> </div>
  				<div class="status_tools status_balloon fright">
  					<a href="#" class="fright none ten">
  						<span class="fleft icons16 ui-state-tools ui-icon-cancel"> </span>
  						clear
  					</a>										
  					<a href="#" class="fright none ten">
  						<span class="fleft icons16 ui-state-tools ui-icon-pencil"> </span>
  						update
  					</a>
  				</div>
  			</div>
			
			<div class="user_actions fright">
			<ul class="weight-bold profile">
				<li class="admire_icon"><a href="" class="none">Admire</a></li>
				<li class="sendmessage_icon"><a href="" class="none">Send Message</a></li>
				<li class="mbands_icon"><a href="" class="none">Invite M-Band</a></li>
				<li class="collab_icon"><a href="" class="none">Ask Collaboration</a></li>
				<li class="podcast_icon"><a href="" class="none">Podcast</a></li>																		
			</ul>
			<div class="ui-state-highlight action_notice">
			<span class="profile ui-icon ui-icon-info fleft" style="margin-right:4px;"> </span>
			Message was sent succesfully
			</div>
			<!-- 
			<div class="ui-state-error action_notice">
			<span class="profile ui-icon ui-icon-alert fleft" style="margin-right:4px;"> </span>
			There was an error, please retry
			</div>
			-->
			</div>
		
		</div>

				<script type="text/javascript" charset="utf-8">
				$(function() {
					$("#profile_tabs").tabs();
				});
				</script>
				<div id="profile_tabs" class="profile">
					<ul class="profile preload_style">
						<li class="profile"><a href="#profile-wall">WALL</a></li>
						<li class="profile"><a href="#profile-info">INFO</a></li>
						<li class="profile"><a href="#profile-songs">MUSIC</a></li>
						<li class="profile"><a href="#profile-bands">M-BANDS</a></li>
						<li class="profile"><a href="#profile-gear">GEAR</a></li>
						<li class="profile"><a href="#profile-photo">PHOTO</a></li>
						<li class="profile"><a href="#profile-video">VIDEO</a></li>
						<li class="profile"><a href="#profile-friend">FRIENDS</a></li>
						<li class="profile force_right"><a href="#profile-inbox">MAILBOX</a></li>
					</ul>
					<div id="profile-wall" class="profile">
					  <div class="w500 fleft">
                <%= render :partial => 'shared/wall' %>
					  </div>
					  <div class="fright">
                <%= render :partial => 'users/notifications' %>
					  </div>
					</div>
					<div id="profile-info" class="profile">
						<%= render :partial => 'users/info/basic' %>
						<%= render :partial => 'users/info/influences' %>
					</div>
					<div id="profile-songs" class="profile">
                <%= render :partial => 'users/songs' %>
					</div>
					<div id="profile-bands" class="profile">
                <%= render :partial => 'users/bands' %>
					</div>
					<div id="profile-gear" class="profile">
                <%= render :partial => 'users/gear' %>
					</div>
					<div id="profile-photo" class="profile">
                <%= render :partial => 'users/pictures' %>
                <%= render :partial => 'users/pictures_edit' %>                
					</div>					
					<div id="profile-video" class="profile">
                <%= render :partial => 'users/videos' %>
                <%= render :partial => 'users/videos_edit' %>                
					</div>	
					<div id="profile-friend" class="profile">
                <%= render :partial => 'users/friends' %>
					</div>														
					<div id="profile-inbox" class="profile">
                <%= render :partial => 'users/mailbox' %>
					</div>
				</div>
				
				
			
		</div>
	</div>
	<!-- END LEFTCOL -->	

	<!-- RIGHTCOL -->	
	<div class="rightCol fright">
	  
        <%= render :partial => 'users/gear_sidebar' %>
        <%= render :partial => 'users/songs_newest_sidebar' %>        
