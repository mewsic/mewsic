<%- content_for :head do -%>
	<%= javascript_include_tag 'jquery.form.js', 'user.js' %>
<%- end -%>
	<!-- LEFTCOL -->
	<div class="leftCol fleft">
		<div class="leftColWrapper">

		<div class="profile_upshow">
