<div class="band_member" id="band_member_<%= band_member.id %>">
	<p class="thumb">	  
	  <%= instrument_icon(band_member.instrument) %>	  
    <%= avatar_image(band_member, :icon, :class => :avatar) %>
  </p>
	<p class="grey-text name"><em><%= band_member.instrument.description %></em></p>
	<p class="name"><%= band_member.name %></p>
	<a class="remove" href="#" onclick="BandMembers.destroy(<%= @user.id %>, <%= band_member.id %>); return false;">X</a>
</div>
