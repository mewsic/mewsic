<div class="rounded-white-top">
	<div class="rounded-white-bottom">
		<div class="elements clear-block">
			<div class="orange-bg">
				<div class="thumb"><%= link_to avatar_image(most_used_track.user, :icon), user_path(most_used_track.user) %></div>
				<p class="name"><%= link_to most_used_track.user.nickname, user_path(most_used_track.user) %></p>
			</div>
			<div class="thumb"><%= track_instrument_icon(most_used_track) %></div>
			<p class="title"><%= truncate most_used_track.title, 30 %></p>
			<p class="author"><%= most_used_track.parent_song.original_author if most_used_track.parent_song %></p>
			<%= rating(most_used_track, :clear => true) %>
			<p class="button float-right">
				<%= mlab_button(most_used_track) %>
				<%= play_button(most_used_track, :color => :orange) %>
			</p>
			<p class="playcount">used <%= pluralize(most_used_track.song_count, 'time') %></p>
		</div>
	</div>
</div>
