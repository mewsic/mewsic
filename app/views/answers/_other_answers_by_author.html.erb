<div class="box-list semi-one-col clear-block">
  <div class="simple-list azzurro-boxes clear-block">
    <h2>Other question by <%= user.login %></h2>
		<div class="top-box clear-block">
			<div class="bottom-box clear-block">
			  <%- other_answers_by_author.each do |answer| -%>
			    <div class="elements clear-block">
					<h3><%= link_to h(answer.body), answer_path(answer) %></h3>
					<p class="grey-text float-right"><%= link_to pluralize(answer.replies.count, 'reply'), answer_path(answer) %></p>
					  <%= rating(answer) %>
				  </div>
			  <%- end -%>	  
			</div>
    </div>
    <%- if other_answers_by_author.size > 0 %>
      <div class="next" style="text-align: right;">
        <img src="/images/spinner.gif" id="answers_spinner" style="display: none;"/>

        <span class="nav-bottom">
        <% if other_answers_by_author.previous_page %>
          <%= link_to_remote image_tag('arrow_simple_left.png', :width => 7, :height => 9) + ' <strong>Prev</strong> ',
                :url =>  siblings_answer_path(@answer, :page => other_answers_by_author.previous_page),
                :update => "other_by_user",		          
                :method => :get,
                :loading => "$('answers_spinner').show()"
          %>
        <% else %>
          <%= image_tag('arrow_simple_left.png', :width => 7, :height => 9)  + ' <strong>Prev</strong> '%>
        <% end %>
        </span>
        <span class="nav-bottom">
        <% if other_answers_by_author.next_page %>
          <%= link_to_remote ' <strong>Next</strong> ' + image_tag('arrow_simple_right.png', :width => 7, :height => 9),
                :url =>  siblings_answer_path(@answer, :page => other_answers_by_author.next_page),
                :update => "other_by_user",		          
                :method => :get,
                :loading => "$('answers_spinner').show()"
          %>
        <% else %>
          <%= ' <strong>Next</strong> ' + image_tag('arrow_simple_right.png', :width => 7, :height => 9) %>
        <% end %>
        </span>
      </div>
    <%- end -%>
    
  </div>  
</div>