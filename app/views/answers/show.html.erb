<div class="search-question clear-block">
  <img src="/images/lente_search.gif" alt="" width="27" height="27" class="float-left" />
  <h2 class="float-left">SEARCH ANSWER</h2>
  <p class="float-left"><input name="" type="text" style="border:1px solid #D3D3D3; width:310px; height:20px; margin:0px 10px;"/></p>
  <div class="float-left">			
    <div class="special-button">
      <img src="/images/special_button_cyan.png" alt="" width="90" height="24">	
      <input type="submit" name="OK" value="Ricerca" class="special_button_small" />
    </div>	
  </div>
</div>



<div class="bottom-border" style="width: 720px; float:none;margin-bottom:20px;"></div>

  <div class="box-list two-col-big clear-block">
    <div class="clear-block">
      <div class="titoletti-question clear-block">
				<p class="float-right"><a href="#">Segnala irregolarit&agrave;</a></p>
				<h2 class="float-left">Domanda aperta</h2>
			</div>
      <div class="top-box clear-block clear-float">
				<div class="bottom-box clear-block">
					<div class="elements clear-block">
						<div class="thumb-question clear-block">
							<p><%= link_to avatar_image(@answer.user, :icon), user_path(@answer.user) %></p>
							<p class="name"><%= link_to @answer.user.login, user_path(@answer.user) %></p>
						</div>
						<div class="testi-question">
							<h1><%= @answer.body %></h1>							
							<div class="float-right">
								<div class="special-button">
								  <div style="text-align: center; font-weight: bold;line-height: 24px; width: 220px; height: 24px;background: url('/images/special_button_cyan_big.png') no-repeat center"><a href="#" style="color: #FFF; font-size:13px" onclick="Effect.BlindDown('reply-form-container');return false;">Rispondi alla domanda<a></div>
								</div>								
							</div>
							<div class="float-left">
              <%= rating(@answer) %>
								<p class="grey-text"><%= time_ago_in_words(@answer.created_at) %></p>					
							</div>
							<div id="reply-form-container" style="clear:both;display: none">
							  <%- form_for(:reply, :url => answer_replies_path(@answer)) do |f| -%>
                  <%= f.text_area :body %><br />
                  <%= submit_tag 'Send', :disable_with => 'Sending...' %>
                <%- end -%>                  
							</div>
						</div>
					</div>
				</div>
			</div>
      
			<div class="titoletti-question clear-block">
				<h2 class="float-left">Replies <span>(<%= @answer.replies.count %>)</span></h2>
			</div>
			<div class="top-box clear-block clear-float">
				<div class="bottom-box clear-block">				
          <%- @answer.replies.each do |reply| -%>
            <div class="elements clear-block">
  						<div class="thumb-question clear-block">
  							<p><%= link_to avatar_image(reply.user, :icon), user_path(reply.user) %></p>
  							<p class="name"><%= link_to reply.user.login, user_path(reply.user) %></p>
  						</div>
  						<div class="testi-answer">
  							<p><strong><%= reply.body %></strong></p>
  							<div class="float-left">
  								<p class="grey-text">
  								<div class="star">
  								  <%= rating(reply) %>
                  </div>
  								<span ><%= time_ago_in_words(reply.created_at) %></span> <span><a href="#">Segnala irregolarit&agrave;</a></span>
  								</p>
  							</div>
  					  </div>
  					</div>
          <%- end -%>	
				</div>
			</div>         
    </div>
  </div>

  <div class="box-list semi-one-col clear-block">			
    <div class="simple-list azzurro-boxes clear-block">
      <h2>Other question by <%= @answer.user.login %></h2>
			<div class="top-box clear-block">
				<div class="bottom-box clear-block">
				  <%- @answer.user.answers.find(:all, :limit => 10).each do |answer| -%>
				    <div class="elements clear-block">
  					<h3><%= link_to h(answer.body), answer_path(answer) %></h3>
  					<p class="grey-text float-right"><%= link_to pluralize(answer.replies.count, 'reply'), answer_path(answer) %></p>
  					  <%= rating(answer) %>
  				  </div>
				  <%- end -%>	  
				</div>
      </div>
    </div>
  </div>
  <div class="simple-list three-col-nospace clear-block clear-float">
    <div class="select-tab clear-block">   
			<div class="active">
				<h1>SIMILAR QUESTIONS</h1>
			</div>
		</div>		
		<div class="box-list clear-block">
			<div class="top-box clear-block">
				<div class="bottom-box clear-block">
					<%- @similar_answers.each do |answer| -%>					
					  <div class="elements clear-block">
              <p class="float-left"><%= link_to avatar_image(answer.user, :icon), user_path(answer.user) %></p>
              <div style="margin:0px 20px 20px 40px;">
  							<h2 class="clearly-cyan-text"><%= link_to h(answer.body), answer_path(answer) %></h2>
  							<p class="star float-right">
  							  <%= rating(answer) %>
                </p>
  							<p class="grey-text float-left">
  							  Answer by  <%= link_to(answer.user.login, user_path(answer.user)) %> - <%= link_to(pluralize(answer.replies.count, 'reply'), answer_path(answer)) %> - <%= time_ago_in_words(answer.created_at) %>
                </p>
  						</div>
  					</div>
					<%- end -%>																				
        </div>
      </div>
    </div>		  
  </div>
