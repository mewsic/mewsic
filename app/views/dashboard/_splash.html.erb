<div id="splash_container" class="banner-instr-home">

		<div id="splash_box_sx"> </div>
			<div id="splash_box_core">

				<div id="splash_elements_container">
					<div id="splash_tag_tracks"> </div>
					<div id="splash_box_elements">
						<!-- dynamic -->
						<%- @splash_tracks.each_with_index do |track, index| -%>
						  <div class="splash <%= %w[odd even][index % 2] %>">
                <%= image_tag(track.instrument.icon, :class => "instrument") %>
                <div class="user"><%= track.parent_song.user.login if (track.parent_song && track.parent_song.user ) %></div>
                <div class="buttons">
                  <%= mlab_button(track) %>
                  <%= play_button(track) %>
                </div>
  						</div>
						<%- end -%>												
						<!-- end dynamic -->								
					</div>
				</div>
				
				<div id="splash_divider_plus"> </div>
				
				<div id="splash_elements_container_mlab">
					<div id="splash_tag_mlab"> </div>
					<div id="splash_box_elements_mlab">
						<div style="float:left;margin-top:120px;padding-left:28px;"><a href="#">Learn More</a></div>

						<div style="float:right;margin-top:120px;padding-right:28px;"><a href="#">Enter</a></div>
					</div>
				</div>

				<div id="splash_divider_equal"> </div>
				
				<div id="splash_elements_container">
					<div id="splash_tag_songs"> </div>
					<div id="splash_box_elements">

						<!-- dynamic -->
						<%- @splash_songs.each_with_index do |song, index| -%>
						  <div class="splash <%= %w[odd even][index % 2] %>">
						    <span class="tracks-number"><span><%= song.tracks.count %></span></span>
                <div class="user"><%= song.user.login if song.user %></div>
                <div class="buttons">
                  <%= mlab_button(song) %>
                  <%= play_button(song) %>
                </div>
  						</div>
						<%- end -%>
						<!-- end dynamic -->												
					</div>
				</div>

			</div>
		<div id="splash_box_dx"> </div>
	</div>
