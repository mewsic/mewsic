<%- if @tracks.size > 0 -%>
  <%- @tracks.each do |track| -%>
  <div class="search_row">
		<div class="float-left">
  		<div class="search_icon_container">
  			<%= play_button(track) %>
  			<%= mlab_button(track) %>
  		</div>
  		<div class="search_icon_container"><%= link_to(avatar_image(track.user, :icon), user_path(track.user)) %></div>
  		<p class="search_black_text"><%= highlight_search track.title %>, <%= highlight_search track.description %></p>
  	</div>
		<div class="float-right">
  		<p class="search_blue_text"><%= link_to(highlight_search(track.parent_song.genre.name), genre_path(track.parent_song.genre)) if track.parent_song.genre %></p>
  		<p class="search_sky_text"><%= track.length %></p>				
  		<div style="float:left;padding-top:6px;"><%= rating(track) %></div>
  	</div>
  </div>
  <%- end -%>
  <%= will_paginate @tracks, :class => 'pagination track', :params => { :type => :track }, :prev_label => "&lt;", :next_label => "&gt;" %>
  <div style="text-align: right;">
    <img src="/images/spinner.gif" id="track-results-spinner" style="display:none"/>
  </div>
<%- else -%>
  <p style="margin-left: 15px" class="grey-text">No tracks found. Create'em with our <%= link_to 'multitrack', logged_in? ? "#{user_path(current_user)}/multitrack" : '/login' %>!</p>
<%- end -%>
