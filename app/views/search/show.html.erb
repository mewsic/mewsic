<% javascript 'search' %>
<% breadcrumb @q %>
<div id="search_head_title">
	<h1 class="search_title"><strong>"<%= h @q %>"</strong> search results
    <strong>(<%= @entries[:users] + @entries[:songs] + @entries[:tracks] + @entries[:ideas] %>)</strong>
  </h1>
</div>

<div id="search_results">

<% if @users %>

<p class="search_title">People <strong>(<%= @entries[:users] %>)</strong></p>

<div id="user-results">
  <%= render :partial => 'user_results' %>
</div>

<% end %>

<div style="clear:both"> </div>

<!-- TABMENU -->

<% if @songs || @tracks %>

<div class="tabmenu">
	<p class="title">Music:</p>
	<% if @songs %>
	<div class="tab <%= 'active' if @songs %>" id="songs-tab">
	  <div class="sx"> </div>
  	<div class="rp">
  		<p class="search_green_text"><a href="#" onclick="$('tracks-tab').removeClassName('active');$('songs-tab').addClassName('active');$('track-results').hide();$('song-results').show(); return false;">Songs&nbsp;</a></p>
  		<p class="counter"><strong>(<%= @entries[:songs] %>)</strong></p>			
  	</div>
  	<div class="dx"> </div>
	</div>
	<% end %>
	<% if @tracks %>
  <div class="tab <%= 'active' if !@songs %>" id="tracks-tab">
    <div class="sx"> </div>
  	<div class="rp">
  		<p class="search_orange_text"><a href="#" onclick="$('songs-tab').removeClassName('active');$('tracks-tab').addClassName('active');$('song-results').hide();$('track-results').show(); return false;">Tracks&nbsp;</a></p>
  		<p class="counter"><strong>(<%= @entries[:tracks] %>)</strong></p>			
  	</div>
  	<div class="dx"> </div>
  </div>	
	<% end %>
</div>

<% end %>

<!-- END TABMENU -->

<div style="clear:both"> </div>

<div id="song-results">
  <%= render :partial => 'song_results' if @songs %>
</div>

<div id="track-results" style="<%= 'display: none;' if @songs %>">
  <%= render :partial => 'track_results' if @tracks %>
</div>

<div style="clear:both"> </div>

<% if @ideas %>

<p class="search_title">Ideas <strong>(<%= @entries[:ideas] %>)</strong></p>

<div id="idea-results">
  <%= render :partial => 'idea_results' if @ideas %>
</div>

<% end %>

</div>
