<h1>SONGS</h1>
<div class="top-box clear-block">
<div class="bottom-box clear-block">		

  <%= render :partial => 'users/song', :collection => @songs %>
  
  <p class="next">      
      <img src="/images/spinner.gif" id="song_spinner" style="display:none;"/>
  	  <span class="nav-bottom">      
		  <% if @songs.previous_page %>
				<%= link_to image_tag('arrow_simple_left.png', :size => '7x9') + ' Prev', mband_songs_path(@mband, :page => @songs.previous_page) %>
		  <% end %>
	  </span>
	  
	  <span class="nav-bottom">
		  <% if @songs.next_page %>
				<%= link_to 'Next ' + image_tag('arrow_simple_right.png', :size => '7x9'), mband_songs_path(@mband, :page => @songs.next_page) %>
		  <% end %>
	  </span>
  </p>

  <%= empty_collection_message @songs,
        :current_user => "#{link_to 'create', music_path} your songs and enjoy!",
        :any_user     => "#{@mband.name} hasn't created any song yet"
	-%>
</div>
</div>	
