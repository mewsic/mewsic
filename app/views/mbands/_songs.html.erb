<table border="0" cellpadding="5" cellspacing="0">
	<%= render :partial => 'mbands/song', :collection => @songs %>
</table>
<%= empty_collection_message @songs, :method => :current_user_mband_page?,
			:current_user => "You can create new songs with our #{link_to 'multitrack', multitrack_path}<br/>#{link_to 'Click here to learn more', help_path('multitrack')}.",
		  :any_user     => "#{@mband.name} hasn't created any song yet"
-%>
<div class="next">      
	<% if @songs.total_pages > 1 %>
		<span class="align-right page-count">Page <%= @songs.current_page %> of <%= @songs.total_pages %></span>
	<% end %>
	<% if @songs.previous_page %>
		<%= link_to image_tag('move_arrow_left.png'), mband_songs_path(@mband, :page => @songs.previous_page), :class => 'navigation' %>
	<% else %>
		<%= image_tag('move_arrow_left.png', :class => 'faded') %>
	<% end %>
	<% if @songs.next_page %>
		<%= link_to image_tag('move_arrow_right.png'), mband_songs_path(@mband, :page => @songs.next_page), :class => 'navigation' %>
	<% else %>
		<%= image_tag('move_arrow_right.png', :class => 'faded') %>
	<% end %>
</div>
