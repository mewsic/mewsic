<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>

  <title>MEWSIC</title>

  <%= stylesheet_link_tag *%w( type layout color instruments appbar profile ) %>

  <%= jquery_javascript_tags %>
  <%= jquery_stylesheet_tags %>

  <script type="text/javascript" src="javascripts/jquery.corner.js"></script>
  <script type="text/javascript" src="javascripts/jquery.simpleautogrow.js"></script>  
  <script type="text/javascript" src="javascripts/jquery.MetaData.js"></script>
  <script type="text/javascript" src="javascripts/jquery.rating.pack.js"></script>
  <link rel="stylesheet" type="text/css" href="stylesheets/jquery.rating.css" />
  
  <script type="text/javascript" src="javascripts/jquery.dataTables.min.js"></script>  
  <link rel="stylesheet" type="text/css" href="stylesheets/dataTables.css" />    

  <script type="text/javascript" src="javascripts/jquery.Jcrop.pack.js"></script>  
  <link rel="stylesheet" type="text/css" href="stylesheets/jquery.Jcrop.css" />    





  <%= javascript_include_tag *%w( application home ) %>

  <%= yield :head %>

</head>
<body>


<!-- HEADER -->
<div id="header">
  <div class="logo">
    <%= clickable_logo 'header_logo.jpg' %>
  </div>
  <ul class="navigation fleft">
    <li><%= link_to 'People', users_path, :class => active_class('users') %></li>
    <li><%= link_to 'Bands', mbands_path, :class => active_class('mbands') %> </li>
    <li><%= link_to 'Songs', songs_path, :class => active_class('songs') %></li>
    <li><%= link_to 'Instruments', tracks_path, :class => active_class('tracks') %></li>
    <li><%= link_to 'Answers', answers_path,  :class => active_class('answers') %></li>
  </ul>
  
	<ul class="login fright">
		<li><a href="#join" id="create-user" class="join_button">JOIN NOW</a></li>
		<li>or <fb:login-button size="small" background="light" ></fb:login-button> Connect with <a href="" class="facebook">Facebook</a></li>
		<li><a href="profile.php" class="login_button">LOGIN</a></li>
	</ul>
	<% if fb_connected? %>
          <fb:profile-pic uid="<%= session[:connect]['uid'] %>" size="square" facebook-logo="true"></fb:profile-pic>
          <b> <fb:name uid="<%= session[:connect]['uid'] %>" useyou="false" capitalize="true" /> </b>
  <% end %>
  <div class="clear"> </div>
  <div id="breadcrumb_bar">
    <div class="corner_lt_blue fleft"> </div>
    <div class="bar_rp_blue fleft"> </div>
    <div class="corner_rt_blue fleft"> </div>
  </div>
</div>
<!-- END HEADER -->

<%= render :partial => 'shared/dialogs' %>

<!-- CONTENT -->
<div id="content">

  <%= yield %>

</div>

<div id="bottom_bar">
  <div class="corner_lb fleft"> </div>
  <div class="bottom_rp fleft"> </div>
  <div class="corner_rb fleft"> </div>
</div>
<!-- END CONTENT -->

<div class="clear"> </div>

<%= render :partial => 'shared/application_bar' %>
<%= render :partial => 'shared/footer' %>


<script src="http://static.ak.connect.facebook.com/js/api_lib/v0.4/FeatureLoader.js.php" type="text/javascript"></script>

<script type="text/javascript">
FB_RequireFeatures(["XFBML", "CanvasUtil", "Api"], function(){
  FB.Facebook.init('8b03aa5c7dae2e65e155bdcd41634d25', '/sessions/connect');
  
  FB.Facebook.get_sessionState().waitUntilReady(function(session) {

  var is_now_logged_into_facebook = session ? true : false;
  var is_session_loaded = <%= (session[:connect] ? true : false) %>

  if (is_now_logged_into_facebook!=is_session_loaded) {
    // user logged in and changed status
    window.location = '/';
  }
});
  
})
</script>

</body>
</html>
