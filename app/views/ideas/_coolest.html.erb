<div class="clear-block">
  <div class="simple-list azzurro-box">
    <h1>COOLEST</h1>
    <div class="top-box clear-block">
      <div class="bottom-box clear-block">
				<%= render :partial => 'songs/track', :collection => @coolest %>
      </div>
    </div>
		<p class="next">
      <% if @coolest.previous_page %>
				<%= link_to image_tag('move_arrow_left.png'), coolest_ideas_path(:page => @coolest.previous_page), :class => 'navigation' %>
			<% else %>
				<%= image_tag('move_arrow_left.png', :class => 'faded') %>
		  <% end %>
      <% if @coolest.next_page %>
				<%= link_to image_tag('move_arrow_right.png'), coolest_ideas_path(:page => @coolest.next_page), :class => 'navigation' %>
			<% else %>
				<%= image_tag('move_arrow_right.png', :class => 'faded') %>
		  <% end %>
    </p>
  </div>
</div>
