<tr class="<%= band_song_row_counter.even? ? "even" : "odd" %>">
  <td class="song-title">
    <p class="title"><%= link_to(truncate(band_song_row.title, 50), band_song_row) %></p>
  </td>
  <td class="star">
    <%= rating(band_song_row, :class => band_song_row_counter.even? ? 'grey-star' : '') unless ie? %>
  </td>
  <td class="button">
    <%= mlab_button(band_song_row) %>
    <%= play_button(band_song_row) %>
  </td>
</tr>
