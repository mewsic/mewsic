<track>
  <id><%= mix.track.id %></id>         
  <user><%= h(mix.track.user.login) %></user>       
  <title><%= h(mix.track.title) %></title>     
  <author><%= h(mix.track.parent_song.original_author) if mix.track.parent_song %></author>     
  <instrument><%= mix.track.instrument.id %></instrument>  
	<rating><%= mix.track.rating_avg.to_f %></rating>
	<filename><%= mix.track.public_filename %></filename>
  <waveform><%= formatted_track_path mix.track, 'png' %></waveform>
  <seconds><%= mix.track.seconds %></seconds>
  <volume><%= mix.volume %></volume>
</track>
