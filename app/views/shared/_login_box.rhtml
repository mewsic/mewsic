<div id="login">
	<div id="login-box-top"> </div>
	<div id="login-box-core">
		<%- form_tag sessions_path do -%>  
  		<p class="login-box-title">Account Login</p>			
  			  <input type="text" name="login" class="login-box-input" value="username" onBlur="if(this.value=='')this.value='username';" onFocus="if(this.value=='username')this.value = '';">
  			  <input type="password" name="password" class="login-box-input" value="password" onBlur="if(this.value=='')this.value='password';" onFocus="if(this.value=='password')this.value = '';">	      
  		<p class="login-box-helplinks">
  			<a href="#" onclick="$('login-box-core').hide(); $('login-box-forgot').show();">Forgot password?</a><br />
        <%= link_to 'Sign up', new_user_path %>
  		</p>		
  		<div id="login-box-remember">
  			<input type="checkbox"> Remember
  		</div>
  		<div id="login-box-submit">
  			<input type="image" src="/images/login-box-button-login.png" />
  		</div>
		<%- end -%>
	</div>
	<div id="login-box-forgot" style="display: none;">
		<% form_remote_tag :url => forgot_password_url, :complete => %[$('forgot-box').hide();$('login-box').show()] do -%>
  		<p class="login-box-title">Your email address</p>
      <p><%= text_field_tag 'email' %></p> 
  		<p class="login-box-helplinks">
  			<a href="#" onclick="$('login-box-forgot').hide(); $('login-box-core').show();">Login</a><br />
  		</p>		
  		<div style="clear: both;"></div>
  		<div id="login-box-submit">
  			<input type="image" src="/images/login-box-button-login.png" />
  		</div>
		<%- end -%>
	</div>
	<div id="login-box-bottom"> </div>
</div>