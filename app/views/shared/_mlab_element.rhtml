<div id="mlab_element_<%= mlab_element.id %>" class="elements clear-block <%= cycle('even', 'odd') %>" style="height: 50px;">
  <div class="float-left">
    <p class="name"><%= link_to(mlab_element.parent_song.user.login, user_path(mlab_element.parent_song.user)) %></p>
    <p class="abstract"><%= mlab_element.title %></p>
  </div>
  <div class="float-left align-right">
    <p class="button">
      <%= play_button(mlab_element) %>
      <a href="#" onclick="MlabSlider.removeTrack(<%= mlab_element.id %>); return false;">remove</a>
    </p>
  </div>
</div>