<track>
  <user><%= h(track.user.login) %></user>       
  <author><%= h(track.parent_song.original_author) if track.parent_song %></author>     
  <title><%= h(track.title) %></title>     
  <instrument><%= track.instrument.id %></instrument>  
  <genre><%= track.parent_song.genre.id if track.parent_song && track.parent_song.genre %></genre>     
  <bpm><%= track.bpm %></bpm>        
  <key><%= h(track.tonality) %></key> 
  <description><%= h(track.description) %></description>
  <rating><%= track.rating_avg.to_f %></rating>     
  <id><%= track.id %></id>         
  <filename><%= track.public_filename %></filename>
  <song_count><%= track.songs.count %></song_count>
  <waveform><%= formatted_track_path track, 'png' %></waveform>
  <seconds><%= track.seconds %></seconds>
  <% if @show_siblings; @show_siblings = false -%>
    <siblings type="direct">
      <songs>
        <%= render :partial => 'shared/song', :collection => track.songs %>
      </songs>
    </siblings>
  <% end -%>
</track>
