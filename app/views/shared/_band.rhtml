<div class="elements clear-block"> 
  	<p class="thumb">
    	<%= link_to avatar_image(band, :small), user_path(band) %>
  	</p>
  	<p class="name"><%= link_to band.login, user_path(band) %></p>
  	<p class="country"><%= h band.compiled_location %></p>
  	<table width="100%" border="0" cellpadding="0" cellspacing="0">
    	<%= render :partial => 'shared/band_song_row', :collection  => band.best_songs(:limit => 3) %>
  	</table>
</div>
