<div class="elements clear-block"> 
  <p class="thumb">
    <a href="<%= user_path band %>"><%= avatar_image(band, :small) %></a>
  </p>
  <!--
    FIXME this link should point to band_path as soon as we implement it
  -->
  <p class="name"><%= link_to band.login, user_path(band) %></p>
  <p class="country"><%= h band.compiled_location %></p>
  <table width="100%" border="0" cellpadding="0" cellspacing="0">
    <%= render :partial => 'shared/band_song_row', :collection  => [1,2,3] %>
  </table>
</div>
