<div class="clear-block">
  <div class="simple-list yellow-box">
		<p class="float-right">
      <% if @newest.previous_page %>
				<%= link_to image_tag('move_arrow_left.png'), newest_bands_and_deejays_path(:page => @newest.previous_page), :class => 'navigation' %>
			<% else %>
				<%= image_tag('move_arrow_left.png', :class => 'faded') %>
		  <% end %>
      <% if @newest.next_page %>
				<%= link_to image_tag('move_arrow_right.png'), newest_bands_and_deejays_path(:page => @newest.next_page), :class => 'navigation' %>
			<% else %>
				<%= image_tag('move_arrow_right.png', :class => 'faded') %>
		  <% end %>
    </p>
    <div id="newest-spinner-top" class="float-right" style="display:none;">
  		<%= image_tag 'spinner.gif' %>
  	</div>
    <h1>NEWEST</h1>
    <div class="top-box clear-block">
      <div class="bottom-box clear-block">
				<%= render :partial => 'users/person_medium', :collection => @newest %>
      </div>
    </div>
		<p class="float-right">
      <% if @newest.previous_page %>
				<%= link_to image_tag('move_arrow_left.png'), newest_bands_and_deejays_path(:page => @newest.previous_page), :class => 'navigation' %>
			<% else %>
				<%= image_tag('move_arrow_left.png', :class => 'faded') %>
		  <% end %>
      <% if @newest.next_page %>
				<%= link_to image_tag('move_arrow_right.png'), newest_bands_and_deejays_path(:page => @newest.next_page), :class => 'navigation' %>
			<% else %>
				<%= image_tag('move_arrow_right.png', :class => 'faded') %>
		  <% end %>
    </p>
    <div id="newest-spinner-bottom" class="float-right" style="display:none;">
  		<%= image_tag 'spinner.gif' %>
  	</div>
  </div>
</div>
