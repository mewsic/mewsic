thumb = "gallery-photo-thumb-#{@photo.id}"

page << "myLightWindow._removeLink($('#{thumb}').down('a.lightwindow'));"
page.remove(thumb)
if params[:mband_id]
  page.visual_effect(:appear, 'no-images-notice') if @mband.photos.size.zero?
else 
  page.visual_effect(:appear, 'no-images-notice') if @user.photos.size.zero?
end
