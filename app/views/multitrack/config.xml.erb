<?xml version="1.0" encoding="UTF-8" ?>
<config>
	<host><%= APPLICATION[:url] %></host>
	<fms><%= APPLICATION[:fms_url] %></fms>
	<media><%= APPLICATION[:media_url] %></media>
	<current_user><%= current_user.id if logged_in? %></current_user>
	<authenticity_token><%= form_authenticity_token if protect_against_forgery? %></authenticity_token>
	<connection_timeout>30</connection_timeout>
	<default_avatar>/images/default_avatars/avatar_small.gif</default_avatar>
  <sync>-1.0</sync> <!-- XXX remove me -->
	<url_request>
		<playlist>/users/{:id}/mlabs.xml</playlist>
		<user>/users/{:id}.xml</user>
		<ping>/noop</ping>
		<songs>
			<fetch>/songs/{:song_id}.xml</fetch>
			<mix method="post">/songs/{:song_id}/mix.xml</mix>
			<update method="put">/songs/{:song_id}.xml</update>
		</songs>
		<tracks>
			<fetch>/tracks/{:track_id}.xml</fetch>
			<create method="post">/tracks.xml</create>
			<download>/tracks/{:track_id}/download</download>
		</tracks>
		<media>
			<mix method="post">/mix?<%= multitrack_auth_token %></mix>
			<encode method="post">/encode_flv?<%= multitrack_auth_token %></encode>
			<upload method="post">/upload?<%= multitrack_auth_token %></upload>
		</media>
		<workers>
			<mixer>/mix/status/{:key}?<%= multitrack_auth_token %></mixer>
			<encoder>/encode_flv/status/{:key}?<%= multitrack_auth_token %></encoder>
			<uploader>/upload/status/{:key}?<%= multitrack_auth_token %></uploader>
		</workers>
	</url_request>
</config>
