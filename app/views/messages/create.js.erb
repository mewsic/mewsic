<%- unless @good_recipients.empty? -%>
Message.notice('<%=escape_javascript "Message sent to #{@good_recipients.collect{|login| "'#{login}'"}.join(', ')}" %>');
<%- end -%>
<%- unless @bad_recipients.empty? -%>
Message.error('<%=escape_javascript "Error sending message to #{@bad_recipients.collect{|login| "'#{login}'"}.join(', ')}" %>');
<%- end -%>
new Effect.ScrollTo('messages');
<% if @bad_recipients.empty? -%> 
  // MailBox.instance.loadPage('<%= new_user_message_path(@user) %>');
  MailBox.instance.closePopup();
  <%= update_messages_count_javascript_for(@user) %>
<% else -%>
  var b = $('new_message_send_button');
  b.disabled = false;
  b.value = b.getAttribute('originalvalue');
<% end -%>
